<web-app>
  <display-name>EmployeeMaintenanceSystem</display-name>
  <servlet>
    <servlet-name>login_validation</servlet-name>
    <servlet-class>com.c2n.action.LoginValidate</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login_validation</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
</web-app>